{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
  },
  "include": [
    "libSrc/**/*",
    "custom.d.ts", "scripts/serverSideTest.js", "src/setupTests.ts",
  ],
}